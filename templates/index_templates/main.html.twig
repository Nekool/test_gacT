        <span id="file_name_container" class="btn btn-light d-none" ></span>
    </div>
    {{ form_widget(
        form.csv_file,
        {'attr': {'class': 'btn btn-primary', 'id': 'csv_file','hidden':true,'accept':'.csv'}}) }}
