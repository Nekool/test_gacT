{% extends "base.html.twig" %}
{% block body %}
    {{ form_start(form) }}

    <span id="error_msg">
        {% if errorMessage is defined %}
            {{ errorMessage }}
        {% endif %}
    </span>
    <h2>Veuillez selectionner un fichier CSV Ã  importer</h2>
{#    CONTAINER POUR LE FAUX BOUTON UPLOAD  #}
